# RIKA 2.0 v3 - Environment Configuration
# Copy this file to .env and configure with your actual API keys

# Core Configuration
NODE_ENV=production
PORT=3000
RIKA_SAFE_MODE=false
RIKA_MEMORY_RESET=false

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here

# ElevenLabs Voice Configuration  
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Whisper STT (uses OpenAI key above)
# WHISPER_API_KEY=same-as-openai-key

# Twilio Voice & SMS
TWILIO_ACCOUNT_SID=ACyour-twilio-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX=rika-memory

# Supabase Database & Storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_WHITELIST=123456789,987654321

# Brave Search API
BRAVE_API_KEY=your-brave-search-key-here

# Cost Management
DAILY_BUDGET_USD=10.00

# Webhook Configuration (for Replit deployment)
WEBHOOK_BASE_URL=https://your-repl-name.your-username.repl.co

# State Sync & Follow Mode
STATE_SYNC_URL=https://your-project.supabase.co
STATE_SYNC_KEY=your-state-sync-key-here

# Feature Flags
FEATURE_FLAGS_URL=https://your-feature-flags-service.com
FEATURE_VOICE_ENABLED=true
FEATURE_VISION_ENABLED=true
FEATURE_TELEGRAM_ENABLED=true
FEATURE_TWILIO_ENABLED=true

# Security
ENCRYPTION_KEY=your-32-char-encryption-key-here
JWT_SECRET=your-jwt-secret-here

# Development
DEBUG=rika:*
LOG_LEVEL=info